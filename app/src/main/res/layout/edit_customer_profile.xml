<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".activity.Edit_Customer_Profile">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/edit_profile_toolbar"
        android:background="@color/colorPrimaryDark"
        app:title="Edit Profile"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/edit_profile_scrollview"
        android:padding="10dp"
        android:layout_marginBottom="70sp"

        android:layout_below="@+id/edit_profile_toolbar">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="180dp"
               android:id="@+id/cover_edit_layout">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Cover Picture"
                   android:id="@+id/cover_photo_text"/>
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:id="@+id/cover_pricture_edit"
                   android:layout_below="@+id/cover_photo_text"
                   android:background="@drawable/biryaniimage"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Upload New"
                   android:textColor="@color/colorPrimaryDark"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginBottom="15dp"
                   android:drawableStart="@drawable/ic_camera_alt_black_24dp"

                   />
           </RelativeLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Profile Picture"
               android:layout_marginTop="10sp"
               android:id="@+id/profile_pic_text" />
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/change_profile_pic_text"
               android:layout_marginTop="10sp"
               >

               <ImageButton
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:id="@+id/edit_profile_pic_btn"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Change Profile Picture"
                   android:drawableStart="@drawable/ic_camera_alt_black_24dp"
                   android:textSize="18sp"
                   android:textColor="@color/colorPrimaryDark"
                   android:layout_toEndOf="@+id/edit_profile_pic_btn"
                   android:layout_centerVertical="true"
                   />
           </RelativeLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10sp">


               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="First Name"
                   android:textSize="15sp"
                   android:id="@+id/edit_pro_first_name"
                   />

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10sp">


               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="15sp"
                   android:hint="Last Name"
                   android:id="@+id/edit_pro_last_name"
                   />

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10sp">


               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Location"
                   android:textSize="15sp"
                   android:id="@+id/edit_pro_location"
                   />

           </com.google.android.material.textfield.TextInputLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Gender"
               android:layout_marginTop="10dp"/>
           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="10sp">
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Male"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Female"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Other"/>

           </RadioGroup>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10sp">


               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Date of Birth"
                   android:textSize="15sp"
                   android:id="@+id/edit_pro_dob"
                   />

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10sp">


               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Favorite Food"
                   android:textSize="15sp"
                   android:id="@+id/edit_pro_fav_food"
                   />

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10sp">


               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Hobbies"
                   android:textSize="15sp"
                   android:id="@+id/edit_pro_hobbies"
                   />

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10sp">


               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Description"
                   android:textSize="15sp"
                   android:id="@+id/edit_pro_description"
                   />

           </com.google.android.material.textfield.TextInputLayout>
       </LinearLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Save Changes"
        android:background="@color/colorPrimaryDark"/>



</RelativeLayout>